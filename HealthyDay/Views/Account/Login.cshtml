@model HealthyDay.Models.Account.LoginModel
@{
    ViewData["HealthyDay"] = "Logowanie";
}

<form asp-controller="Account" asp-action="Login" method="post"  class="account-form">
    <fieldset class="account-fieldset">
        <legend class="account-legend">Logowanie</legend>
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="account-form-container">
            <div class="account-label">
                <label>Login</label>
            </div>
            <div class="account-input">
                <input asp-for="Login" type="text" />
                <span asp-validation-for="Login" class="text-danger"></span>
            </div>
            <div class="account-label">
                <label>Hasło</label>
            </div>
            <div class="account-input">
                <input asp-for="Password" type="password" />
                <span asp-validation-for="Login" class="text-danger"></span>
            </div>
            <div class="account-label">
                <label>Zapamiętaj mnie</label>
                <input asp-for="RememberMe" type="checkbox" />
            </div>
            <div class="account-btn">
                <button class="btn-primary" type="submit">Zaloguj</button>
            </div>
        </div>
    </fieldset>
</form>