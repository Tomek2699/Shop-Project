@model HealthyDay.Models.Account.RegisterModel
@{
    ViewData["HealthyDay"] = "Rejestracja";
}

<form asp-controller="Account" asp-action="Register" method="post"  class="account-form" >
    <fieldset class="account-fieldset">
        <legend class="account-legend">Rejestracja</legend>
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="account-form-container">
            <div class="account-label">
                <label>Podaj login</label>
            </div>
            <div class="account-input">
                <input asp-for="Login" type="text" />
                <span asp-validation-for="Login" class="text-danger"></span>
            </div>
            <div class="account-label">
                <label>Podaj hasło</label>
            </div>
            <div class="account-input">
                <input asp-for="Password" type="password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="account-label">
                <label>Podaj ponownie hasło</label>
            </div>
            <div class="account-input">
                <input asp-for="ConfirmPassword" type="password" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="account-btn">
                <button class="btn-primary" type="submit">Zarejestruj</button>
            </div>
        </div>
    </fieldset>
</form>