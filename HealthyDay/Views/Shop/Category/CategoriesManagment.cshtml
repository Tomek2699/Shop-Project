@model IList<HealthyDay.Models.Shop.Category.CategoryModel>
@{
    ViewData["HealthyDay"] = "Zarządzanie kategoriami";
    int id = 1;
}

@if (Model.Any())
{
    <table class="table table-striped">
        <thead class="thead-dark">
            <tr>
                <th>ID</th>
                <th>Nazwa</th>
                <th>
                    <a asp-controller="Shop" asp-action="AddCategory" class="btn-primary">Dodaj kategorie</a>
                    <a asp-controller="Shop" asp-action="ShopManagment" class="btn-delete">Anuluj</a>
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in @Model)
            {
                <tr>
                    <td>@id</td>
                    <td>@item.Name</td>
                    <td>
                        <a asp-controller="Shop" asp-action="EditCategory" asp-route-id="@item.Id" class="btn-edit">Edutuj</a>
                        <a asp-controller="Shop" asp-action="DeleteCategory" asp-route-id="@item.Id" class="btn-delete">Usuń</a>
                        <a asp-controller="Shop" asp-action="DetailsCategory" asp-route-id="@item.Id" class="btn-info">Szczegóły</a>
                    </td>
                </tr>
                id++;
            }
        </tbody>
    </table>
}
else
{
    <div>
        <h1 class="h1-title-main">Nie ma jeszcze dodanej żadnej kategorii</h1>
    </div>
    <div>
        <a asp-controller="Shop" asp-action="AddCategory" class="btn-primary">Dodaj kategorie</a>
        <a asp-controller="Shop" asp-action="ShopManagment" class="btn-delete">Anuluj</a>
    </div>
}